{
  "rulesDirectory": [
    "node_modules/codelyzer"
  ],
  "extends": [
    "tslint-eslint-rules",
    "codelyzer",
    "vrsource-tslint-rules",
    "tslint-immutable",
    "tslint-consistent-codestyle",
    "angular-tslint-rules"
  ],
  "defaultSeverity": "error",
  "rules": {
    "member-access": false,
    "no-unnecessary-class": false,
    "no-invalid-this": true,
    "no-duplicate-super": true,
    "no-inferrable-types": false,
    "no-internal-module": true,
    "no-var-requires": false,
    "typedef": true,
    "member-ordering": [
      true,
      {
      "public-before-private": true,
      "static-before-instance": true ,
      "variables-before-functions": true
    }
    ],
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      }
    ],
    "ban": false,
    "curly": true,
    "forin": false,
    "no-unnecessary-initializer": false,
    "import-blacklist": [
      true
      // "rxjs"
    ],
    "prefer-object-spread": false,
    "prefer-for-of": false,
    "label-position": true,
    "no-arg": true,
    "no-bitwise": false,
    "no-conditional-assignment": true,
    "prefer-conditional-expression": false,
    "use-view-encapsulation": false,
    "only-arrow-functions": false,
    "no-console": [
      true,
      "debug",
      "info",
      "time",
      "timeEnd",
      "trace"
    ],
    "no-construct": true,
    "no-empty-interface": true,
    "prefer-method-signature": false,
    "interface-over-type-literal": false,
    "arrow-return-shorthand": false,
    "no-debugger": true,
    "no-duplicate-variable": [
      true,
      "check-parameters"
    ],
    "prefer-template": false,
    "arrow-parens": false,
    "no-duplicate-imports": true,
    "no-angle-bracket-type-assertion": false,
    "array-type": false,
    "no-empty": {
      "severity": "off",
      "options": ["allow-empty-catch"]
    },
    "one-variable-per-declaration": false,
    "object-literal-shorthand": false,
    "prefer-function-over-method": false,
    "no-eval": true,
    "no-null-keyword": false,
    "no-shadowed-variable": true,
    "no-string-literal": false,
    "no-switch-case-fall-through": true,
    "no-unused-expression": {
      "severity": "warning",
      "options": ["allow-fast-null-checks"]
    },
    "no-unused-variable": true,
    "no-use-before-declare": true,
    "no-var-keyword": true,
    "radix": true,
    "switch-default": true,
    "triple-equals": [
      true,
      "allow-null-check"
    ],
    "eofline": true,
    "indent": [
      true,
      "spaces",
      2
    ],
    "max-classes-per-file": [true, 3, "exclude-class-expressions"],
    "max-file-line-count": [true, 300],
    "max-line-length": [
      true,
      140
    ],
    "no-require-imports": false,
    "no-trailing-whitespace": true,
    "space-within-parens": [true, 0],
    "newline-before-return": false,
    "object-literal-sort-keys": false,
    "trailing-comma": [
      true,
      {
        "multiline": false,
        "singleline": "never"
      }
    ],
    "align": true,
    "no-sparse-arrays": true,
    "class-name": true,
    "import-spacing": true,
    "new-parens": true,
    "no-misused-new": true,
    "prefer-const": true,
    "comment-format": [
      true,
      "check-space"
    ],
    "interface-name": true,
    "jsdoc-format": false,
    "ordered-imports": false,
    "no-implicit-dependencies": false,
    "no-consecutive-blank-lines": [
      true,
      2
    ],
    "one-line": [
      true,
      "check-open-brace",
      "check-catch",
      "check-else",
      "check-finally",
      "check-whitespace"
    ],
    "quotemark": [
      true,
      "single",
      "avoid-escape"
    ],
    "semicolon": [
      true,
      "always"
    ],
    "variable-name": [
      true,
      "check-format",
      "allow-leading-underscore",
      "ban-keywords"
    ],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator",
      "check-rest-spread",
      "check-type",
      "check-type-operator",
      "check-preblock"
    ],
    "space-before-function-paren": [
      true,
      {
        "anonymous": "never",
        "named": "never",
        "asyncArrow": "always",
        "method": "never",
        "constructor": "never"
      }
    ],
    "angular-whitespace": [
      true,
      "check-semicolon"
    ],
    "trackBy-function": false,
    "no-output-on-prefix": false,
    // The rule have the following arguments:
    // [ENABLED, "attribute" | "element", "selectorPrefix" | ["listOfPrefixes"], "camelCase" | "kebab-case"]
    "directive-selector": [true, "attribute", ["acn"], "camelCase"],
    //"component-selector": [true, "element", ["acn"], "kebab-case"],
    "component-selector": [true, "element", [], "kebab-case"],
    "use-input-property-decorator": true,
    "use-output-property-decorator": true,
    "use-host-property-decorator": true,
    "no-attribute-parameter-decorator": true,
    "no-input-rename": true,
    "no-output-rename": true,
    "no-forward-ref": true,
    "use-life-cycle-interface": true,
    "use-pipe-transform-interface": true,
    "pipe-naming": false,
    // [ENABLED, "SUFFIX"]
    // Where "SUFFIX
    "component-class-suffix": [true, "Component"],
    "directive-class-suffix": [true, "Directive"],
    "templates-use-public": true,
    "no-access-missing-member": true, // There is an outstanding bug with inheritance with this.
    "invoke-injectable": true,
    "cyclomatic-complexity": true
  }
}